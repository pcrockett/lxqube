#!/usr/bin/env bash
set -Eeuo pipefail
[[ "${BASH_VERSINFO[0]}" -lt 4 ]] && echo "Bash >= 4 required" && exit 1

readonly SCRIPT_DIR=$(dirname "$(readlink -f "$0")")
readonly SCRIPT_NAME=$(basename "$0")
readonly UTIL_SCRIPT="${SCRIPT_DIR}/_util.sh"

# shellcheck source=/dev/null
. "${UTIL_SCRIPT}"

subcommand_scripts=$(find "${SCRIPT_DIR}" -regex ".*/lxq-[a-z]+\.sh")

function print_subcommand_summary() {
    full_script_path="${1}"
    if [[ $full_script_path =~ /lxq-([a-z]+)\.sh ]]; then
        command_name="${BASH_REMATCH[1]}"
        summary=$("${full_script_path}" --short-summary)
        printf "  %s%s\n" "${command_name}" "${summary}" >&2
    else
        panic "${full_script_path} did not match regex as expected."
    fi
}

function show_usage() {
    printf "Usage: %s [command]\n" "${SCRIPT_NAME}" >&2
    printf "\n" >&2
    printf "Available commands:\n" >&2

    for s in $subcommand_scripts
    do
        print_subcommand_summary "${s}"
    done

    printf "\n" >&2
    printf "Flags:\n">&2
    printf "  -h, --help\t\tShow help message then exit\n" >&2
}

function show_usage_and_exit() {
    show_usage
    exit 1
}

function parse_commandline() {

    if [ "${#}" -gt "0" ]; then

        for s in $subcommand_scripts
        do
            if [ "${SCRIPT_DIR}/lxq-${1}.sh" == "${s}" ]; then
                LXQ_COMMAND="${1}"
            fi
        done

        if is_set "${LXQ_COMMAND+x}"; then
            return
        fi
    fi

    while [ "${#}" -gt "0" ]; do
        local consume=1

        case "$1" in
            -h|-\?|--help)
                ARG_HELP="true"
            ;;
            *)
                echo "Unrecognized argument: ${1}"
                show_usage_and_exit
            ;;
        esac

        shift ${consume}
    done
}

parse_commandline "$@"

if is_set "${LXQ_COMMAND+x}"; then

    DEFAULT_CONFIG="${LXQ_REPO_DIR}/default-config.sh"
    USER_CONFIG="${LXQ_REPO_DIR}/user-config.sh"

    # shellcheck source=/dev/null
    . "${DEFAULT_CONFIG}"

    if [ -f "${USER_CONFIG}" ]; then
        # shellcheck source=/dev/null
        . "${USER_CONFIG}"
    fi

    shift 1
    "${LXQ_SCRIPT_DIR}/lxq-${LXQ_COMMAND}.sh" "$@"
    exit "${?}"
fi

if is_set "${ARG_HELP+x}"; then
    show_usage_and_exit
fi

echo "No arguments specified."
show_usage_and_exit
